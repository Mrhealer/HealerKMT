<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_wifi_room"
    android:orientation="vertical"
    tools:context=".CheckWifiActivity">

    <include layout="@layout/toolbar_add_device" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Enter your Wi-FI \n password \nto configure the device"
            android:textSize="24dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:paddingLeft="45dp"
        android:paddingRight="45dp">

        <EditText
            android:id="@+id/edt_Name_Wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder_image_bottom"
            android:drawableLeft="@drawable/wifi_input"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:padding="10dp"
            android:text="Healer 402"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edt_Password_Wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/boder_image_bottom"
            android:drawableLeft="@drawable/password_input"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:hint="Enter Wi-Fi password"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <com.kaity.dev.smarthome.Utils.Ripple
        android:id="@+id/content_Ripple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:rb_color="#0099CC"
        app:rb_duration="3000"
        app:rb_radius="22dp"
        app:rb_rippleAmount="6"
        app:rb_scale="6">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="10dp"
            android:src="@drawable/wifi_founded"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_Configure"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/border_background_image"
            android:gravity="center"
            android:text="Configure"
            android:textColor="@color/white" />
    </com.kaity.dev.smarthome.Utils.Ripple>

</LinearLayout>