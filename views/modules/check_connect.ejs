    <!-- page script -->
    <script src="./js/process/user/check_connect.js?v=1.0.0.0"></script>
    <script type="text/javascript">
        //listen socket
        var socket = io.connect('http://localhost:8081');
        socket.on('*', function (data) {
            console.log(data);
            var txtContent = data.content;
            $("#txtReceive").val(txtContent)
        });

        $("#btnSend").click(function(){
            var txtContent = $("#txtSend").val();
            console.log("txtContent: " + txtContent);
            socket.emit('*', { content: txtContent });
        });

        // connect to file processing
        var main_doc = {};
        main_doc['Check'] = new Check();
        $(document).ready(function () {
            main_doc.Check.init();
        });
    </script>